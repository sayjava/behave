{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "access": "public",
      "ignoreChanges": ["**/*.md", "**/*.json", "**/test/**", "examples/**/.*"],
      "conventionalCommits": true,
      "allowBranch": "main",
      "registry": "https://registry.npmjs.org",
      "message": "chore(release): released"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "version": "independent",
  "publishConfig": {
    "directory": "lib",
    "access": "public"
  }
}
